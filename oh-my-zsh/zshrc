# Oh-My-Zsh Configuration
ZSH_THEME="smith"              # Set name of the theme to load.
COMPLETION_WAITING_DOTS="true"  # Display red dots whilst waiting for completion.

# Language Preferences
export LANG=en_US.UTF-8
export LANGUAGE=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export LC_CTYPE=en_US.UTF-8

# Setup PATH
export PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/sbin:/usr/sbin:$PATH"
export PATH=${PATH}:~/.composer/vendor/bin
if [ -d "$HOME/.bin" ]; then # Include private bin if exists
  PATH="$HOME/.bin:$PATH"
fi

# Set correct TERM for plain shell and tmux
export TERM='xterm-256color'

# QOL Alias's
alias ll="ls -las"
alias ls="ls -l"
alias tmux="TERM=screen-256color-bce tmux"
alias mux="tmux new -A -s default"

# Need that neovim love
export EDITOR='nvim'
export VISUAL='nvim'
alias vim="nvim"

# OS dependent configurations
# darwin = osx
if [[ $OSTYPE =~ "darwin" ]]; then

  # JAVA HOME
  export JAVA_HOME="$(/usr/libexec/java_home -v 1.8)"

  # Fixes some bug in Tmux on MaxOS Sierra
  export EVENT_NOKQUEUE=1

  # Empty the Trash on all mounted volumes and the main HDD
  alias emptyTrash="sudo rm -rfv /Volumes/*/.Trashes; rm -rfv ~/.Trash"

  # Shows and Hides hidden files
  alias showHiddenFiles='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder /System/Library/CoreServices/Finder.app'
  alias hideHiddenFiles='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder /System/Library/CoreServices/Finder.app'

  # Some quick and dirty tmux management
  alias mux='tmux new -A -s basic'

elif [[ $OSTYPE == "linux-gnu" ]]; then

fi

# Path to your oh-my-zsh installation.
export ZSH=$HOME/.oh-my-zsh
source $ZSH/oh-my-zsh.sh
