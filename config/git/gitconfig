[core]
  editor = nvim
[init]
  defaultBranch = main
[pull]
  ff = only
[commit]
  gpgsign = true
	verbose = true
[gpg]
  format = ssh
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[diff]
  algorithm = histogram
	colorMoved = plain
	mnemonicprefix = true
	renames = true
[push]
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[help]
	autocorrect = prompt
# Use SSH url instead of HTTPS: or GIT:
[url "git@github.com:"]
	insteadOf = "https://github.com/"
	insteadOf = "git://github.com/"
	insteadOf = "github:"
[include]
  path = ~/.config/git/gitlocal-common
  path = ~/.config/git/gitlocal
